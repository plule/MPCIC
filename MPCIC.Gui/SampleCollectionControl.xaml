<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:MPCIC="clr-namespace:MPCIC.Gui;assembly=MPCIC.Gui">
  <StackPanel Orientation="Vertical">
    <TextBox Name="name" Text="{Binding Name}" />
    <StackPanel Orientation="Vertical" Name="sampleStack" />
    <Grid Name="sampleGrid">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
        <RowDefinition Height = "Auto" />
      </Grid.RowDefinitions>

      <TextBlock Grid.Row = "0" Grid.Column = "0" Margin="3" FontWeight="Bold" Text="File name" />
      <TextBlock Grid.Row = "0" Grid.Column = "1" Margin="3" FontWeight="Bold" Text="Low Note" />
      <TextBlock Grid.Row = "0" Grid.Column = "2" Margin="3" FontWeight="Bold" Text="Root Note" />
      <TextBlock Grid.Row = "0" Grid.Column = "3" Margin="3" FontWeight="Bold" Text="High Note" />
    </Grid>
  </StackPanel>
</UserControl>